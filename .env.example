# Email Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# Sender email address (e.g., your 163.com email)
SENDER_EMAIL=your_email@163.com

# Email password or app-specific password
# For 163.com, you may need to use an authorization code instead of your password
SENDER_PASSWORD=your_email_password_or_app_code

# Recipient email address (e.g., Kindle email)
RECIPIENT_EMAIL=recipient@example.com

# Optional: Input PDF file path
# If not set, defaults to "./data/吕思勉全集 7 隋唐五代史 上 (吕思勉著).pdf"
INPUT_PDF_PATH=./data/your_pdf_file.pdf
